<html xmlns:jsp="http://java.sun.com/JSP/Page" 
      xmlns:c="http://java.sun.com/jsp/jstl/core"
      xmlns:fn="http://java.sun.com/jsp/jstl/functions"
      xmlns:tiles="http://tiles.apache.org/tags-tiles" 
      xmlns:spring="http://www.springframework.org/tags" 
      xmlns:util="urn:jsptagdir:/WEB-INF/tags/util">  

    <jsp:output doctype-root-element="HTML" doctype-system="about:legacy-compat" />

    <jsp:directive.page contentType="text/html;charset=UTF-8" />  
    <jsp:directive.page pageEncoding="UTF-8" /> 
    <jsp:output omit-xml-declaration="yes"/>

    <head>
        <title>
            <c:choose>
                <c:when test="${empty title}">
                    Tham gia mạng tuyển dụng gia tăng cơ hội nghề nghiệp cho bạn - MangTuyenDung.VN
                </c:when>
                <c:when test="${fn:length(title) > 140 }">${title}</c:when>
                <c:when test="${empty job.signature}">
                    <c:out value="${title}" /> - MangTuyenDung.VN
                </c:when>
                <c:otherwise>
                    <c:out value="${title}" /> - MangTuyenDung ${fn:substring(job.signature, 0, 3)}
                </c:otherwise>
            </c:choose>
        </title>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=8" />	
        <meta name="description" content="${description}"/>
        <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
        <spring:url value="/resources/js" var="js_path"/>
        <script src="${js_path}/jquery/jquery-1.8.1.min.js" type="text/javascript"><!-- required for FF3 and Opera --></script>
        <script src="${js_path}/bootstrap/js/bootstrap.min.js" type="text/javascript"><!-- required for FF3 and Opera --></script>
        <script src="${js_path}/bootstrap/js/application.js" type="text/javascript"><!-- required for FF3 and Opera --></script>
        <script src="${js_path}/bootstrap/js/bootstrap-carousel.js" type="text/javascript"><!-- required for FF3 and Opera --></script>

        <link rel="stylesheet" href="${js_path}/bootstrap/css/bootstrap.min.css" type="text/css" title="ui-theme" />
        <link rel="stylesheet" href="${js_path}/bootstrap/css/bootstrap-responsive.min.css" type="text/css" title="ui-theme" />
        <link rel="stylesheet" href="${js_path}/google-code-prettify/prettify.css" type="text/css" title="ui-theme" />
        <link rel="stylesheet" href="${js_path}/bootstrap/css/layout.css" type="text/css" title="ui-theme" />
        <link rel="stylesheet" href="${js_path}/bootstrap/css/docs.css" type="text/css" title="ui-theme" />
        <!--<link rel="stylesheet" href="${js_path}/bootstrap/css/profile.css" type="text/css" title="ui-theme" />-->

        <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
        <!--[if lt IE 9]>
          <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
        <![endif]-->
        <script type="text/javascript">

            var _gaq = _gaq || [];
            _gaq.push(['_setAccount', 'UA-35262246-1']);
            _gaq.push(['_setDomainName', 'mangtuyendung.vn']);
            _gaq.push(['_trackPageview']);

            (function() {
                var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
                ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
            })();

        </script>
    </head>

    <body>
        <tiles:insertAttribute name="header"/> 
        <tiles:insertAttribute name="search" ignore="true"/> 
        <div class="container-fluid">
            <div class="row-fluid">
                <div class="span9">
                    <!--Body content-->
                    <tiles:insertAttribute name="body"/>
                </div>
                <div class="span3">
                    <!--Sidebar content-->
                    <tiles:insertAttribute name="menu"/>
                </div>
            </div>
        </div>
        <tiles:insertAttribute name="footer" ignore="true"/>
    </body>
    <!--[if lt IE 9]>
    <script src="${js_path}/css3-mediaqueries.js" type="text/javascript"></script>
    <![endif]-->
</html>
