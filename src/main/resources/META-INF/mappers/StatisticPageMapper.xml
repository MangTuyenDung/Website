<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hadoopvietnam.persistence.repositories.statistics.StatisticPageRepository">

    <cache type="org.mybatis.caches.ehcache.EhcacheCache"/>
    
    <insert id="save" parameterType="StatisticPageDomain" flushCache="true">
        INSERT INTO nstatistics_pages
        (page_id, page_name, count, tstamp)
        VALUES
        (#{id}, #{pageName}, #{count}, #{created})
    </insert>
    
</mapper>