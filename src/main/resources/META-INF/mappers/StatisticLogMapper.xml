<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.hadoopvietnam.persistence.repositories.statistics.StatisticLogRepository">

    <cache type="org.mybatis.caches.ehcache.EhcacheCache"/>
    
    <insert id="save" parameterType="StatisticLogDomain" flushCache="true">
        INSERT INTO nstatistics_log
        (id, record, source, tstamp)
        VALUES
        (#{id}, #{userAgent}, #{source}, #{created})
    </insert>
    
</mapper>