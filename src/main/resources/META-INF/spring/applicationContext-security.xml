<?xml version="1.0" encoding="UTF-8"?>

<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans" 
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
                        http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
                        http://www.springframework.org/schema/security 
                        http://www.springframework.org/schema/security/spring-security-3.1.xsd">

    <!-- HTTP security configurations -->
    <http auto-config="true" use-expressions="true">
        <form-login login-processing-url="/resources/j_spring_security_check"
                    default-target-url="/thanh-vien.html"
                    login-page="/login" authentication-failure-url="/login?login_error=t" />
        <logout logout-url="/resources/j_spring_security_logout" />
        <!-- Configure these elements to secure URIs in your application -->
        <intercept-url pattern="/thanh-vien/nop-ho-so-tuyen-dung/**" access="permitAll" />
        <intercept-url pattern="/thanh-vien/**" access="isAuthenticated()" />
        <intercept-url pattern="/thanh-vien**" access="isAuthenticated()" />
        <intercept-url pattern="/dang-tin-tuyen-dung/**" access="isAuthenticated()" />
        <intercept-url pattern="/dang-tin-tuyen-dung**" access="permitAll" />
        <intercept-url pattern="/admin/**" access="isAuthenticated()" />
        <intercept-url pattern="/admin**" access="isAuthenticated()" />
        <intercept-url pattern="/resources/**" access="permitAll" />
        <intercept-url pattern="/login**" access="permitAll" />
        <intercept-url pattern="/image**" access="permitAll" />
        <intercept-url pattern="/crawl**" access="permitAll" />
        <intercept-url pattern="/accessDenied" access="permitAll" />
        <intercept-url pattern="/**" access="permitAll" />
        <access-denied-handler error-page="/accessDenied" />
    </http>

    <!-- Configure Authentication mechanism -->
    <authentication-manager alias="authenticationManager">
        <authentication-provider ref="daoAuthenticationProvider" />
    </authentication-manager>

    <beans:bean id="userDetailsService" class="com.hadoopvietnam.security.MyUserDetailsService" />
    
    <beans:bean id="saltSource" class="com.hadoopvietnam.security.MySaltSource" />
    
    <beans:bean id="daoAuthenticationProvider"
                class="org.springframework.security.authentication.dao.DaoAuthenticationProvider">
        <beans:property name="userDetailsService" ref="userDetailsService" />
        <beans:property name="passwordEncoder" ref="passwordEncoder" />
    </beans:bean>

    <beans:bean id="passwordEncoder"
                class="org.springframework.security.authentication.encoding.ShaPasswordEncoder">
        <beans:constructor-arg index="0" value="512" />
        <beans:property name="encodeHashAsBase64" value="true"/>
    </beans:bean>
</beans:beans>